<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blackjack</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Assuming you have a styles.css file in public -->
</head>
<body>
    <div class="game-container">
        <h1>Blackjack</h1>
        
        <div class="game-status">
            <h2><%= message %></h2>

            <div class="hand player-hand">
                <h3>Your Cards:</h3>
                <ul>
                    <% playerHand.forEach(card => { %>
                        <li><%= card.value %> of <%= card.suit %></li>
                    <% }); %>
                </ul>
                <p>Your Score: <%= playerScore %></p>
            </div>

            <div class="hand dealer-hand">
                <h3>Dealer's Cards:</h3>
                <ul>
                    <% dealerHand.forEach(card => { %>
                        <li><%= card.value %> of <%= card.suit %></li>
                    <% }); %>
                </ul>
                <p>Dealer's Score: <%= dealerScore %></p>
            </div>

            <% if (!gameOver) { %>
                <form action="/hit" method="POST">
                    <button type="submit">Hit</button>
                </form>
                <form action="/stand" method="POST">
                    <button type="submit">Stand</button>
                </form>
            <% } else { %>
                <form action="/" method="GET">
                    <button type="submit">Play Again</button>
                </form>
            <% } %>
        </div>
    </div>
</body>
</html>
