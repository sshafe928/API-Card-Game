<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blackjack Game</title>
    <link rel="stylesheet" href="/blackJack.css"> <!-- Note: No 'public/' in the path -->
</head>
<body>
    <div class="game-container">
        <h1>Blackjack Game</h1>
        
        <div class="game-status">
            <p><strong>Wins:</strong> <%= wins %></p>
            <p><strong>Losses:</strong> <%= losses %></p>
        </div>

        <div class="cards-section">
            <h2>Your Hand</h2>
            <div class="player-cards">
                <% playerHand.forEach(card => { %>
                    <div class="card">
                        <p><%= card.value %> of <%= card.suit %></p>
                    </div>
                <% }); %>
            </div>
            <p><strong>Your Score:</strong> <%= playerScore %></p>
        </div>

        <div class="cards-section">
            <h2>Dealer's Hand</h2>
            <div class="dealer-cards">
                <% dealerHand.forEach((card, index) => { %>
                    <div class="card">
                        <p>
                            <%= (index === 0 || showDealerHand) 
                                ? `${card.value} of ${card.suit}` 
                                : 'Hidden' %>
                        </p>
                    </div>
                <% }); %>
            </div>
            <p><strong>Dealer shows:</strong> <%= dealerHand[0].value %> of <%= dealerHand[0].suit %></p>
            <% if (showDealerHand) { %>
                <p><strong>Dealer's Score:</strong> <%= dealerScore %></p>
            <% } %>
        </div>

        <% if (gameOver) { %> <!-- Check if the game is over -->
            <div class="game-over">
                <h2><%= gameResult %></h2> <!-- Display win/lose message -->
                <form action="/blackjack/reset" method="post"> <!-- Reset game -->
                    <button type="submit">Play Again</button>
                </form>
            </div>
        <% } else { %> <!-- If the game is still ongoing -->
            <div class="controls">
                <form action="/blackjack" method="post">
                    <button type="submit" name="action" value="hit">Hit</button>
                    <button type="submit" name="action" value="stand">Stand</button>
                </form>
            </div>
        <% } %>
    </div>
</body>
</html>
